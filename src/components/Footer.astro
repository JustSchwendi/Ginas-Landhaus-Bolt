---
export interface Props {
  lang?: string;
}

const { lang = 'de' } = Astro.props;

const content = {
  de: {
    contact: 'Kontakt',
    address: 'Adresse',
    phone: 'Telefon',
    email: 'E-Mail',
    quickLinks: 'Schnellnavigation',
    routePlanning: 'Routenplanung',
    copyright: 'Alle Rechte vorbehalten',
    privacy: 'Datenschutz',
    imprint: 'Impressum'
  },
  en: {
    contact: 'Contact',
    address: 'Address',
    phone: 'Phone',
    email: 'Email',
    quickLinks: 'Quick Links',
    routePlanning: 'Route Planning',
    copyright: 'All rights reserved',
    privacy: 'Privacy Policy',
    imprint: 'Legal Notice'
  }
};

const t = content[lang as keyof typeof content] || content.de;
---

<footer class="footer dark-bg">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{t.contact}</h3>
        <div class="contact-info">
          <div class="contact-item">
            <strong>{t.address}:</strong><br>
            Gina's Landhaus im Pinkertal<br>
            Hauptplatz 11<br>
            7521 Eberau<br>
            Österreich
          </div>
          <div class="contact-item">
            <strong>{t.phone}:</strong><br>
            <a href="tel:+436643223369">+43 664 322 33 69</a>
          </div>
          <div class="contact-item">
            <strong>{t.email}:</strong><br>
            <a href="mailto:office@ginas-landhaus.at">office@ginas-landhaus.at</a>
          </div>
        </div>
      </div>
      
      <div class="footer-section">
        <h3>{t.quickLinks}</h3>
        <ul class="footer-links">
          <li><a href={lang === 'en' ? '/en/house' : '/haus'}>
            {lang === 'en' ? 'The House' : 'Das Haus'}
          </a></li>
          <li><a href={lang === 'en' ? '/en/region' : '/region'}>
            {lang === 'en' ? 'Region' : 'Region'}
          </a></li>
          <li><a href={lang === 'en' ? '/en/booking' : '/buchung'}>
            {lang === 'en' ? 'Booking' : 'Buchung'}
          </a></li>
          <li><a href={lang === 'en' ? '/en/about' : '/about'}>
            {lang === 'en' ? 'About' : 'Über uns'}
          </a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h3>{t.routePlanning}</h3>
        <div class="route-planning">
          <p>{lang === 'en' ? 'Plan your route to us:' : 'Planen Sie Ihre Route zu uns:'}</p>
          <div class="route-links">
            <a href="https://www.google.com/maps/dir//Gina's+Landhaus+im+Pinkertal,+Hauptplatz+11,+7521+Eberau,+Austria" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="route-link"
               aria-label="Route mit Google Maps planen">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
              Google Maps
            </a>
            <a href="https://www.openstreetmap.org/directions?from=&to=47.0833%2C16.3167#map=15/47.0833/16.3167" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="route-link"
               aria-label="Route mit OpenStreetMap planen">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
              OpenStreetMap
            </a>
          </div>
          <div class="address-copy">
            <p><strong>{lang === 'en' ? 'Address for GPS:' : 'Adresse für GPS:'}</strong></p>
            <p class="gps-address">Hauptplatz 11, 7521 Eberau, Austria</p>
          </div>
        </div>
        
        <div class="social-links">
          <a href="#" aria-label="Facebook" class="social-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" aria-label="Instagram" class="social-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; 2024 Gina's Landhaus. {t.copyright}</p>
      <div class="legal-links">
        <a href={lang === 'en' ? '/en/privacy' : '/datenschutz'}>{t.privacy}</a>
        <a href={lang === 'en' ? '/en/imprint' : '/impressum'}>{t.imprint}</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
    margin-top: var(--spacing-2xl);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  .footer-section h3 {
    color: var(--color-accent);
    margin-bottom: var(--spacing-lg);
    font-size: 1.25rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .contact-item {
    line-height: 1.6;
  }

  .contact-item a {
    color: var(--color-link-on-dark);
    text-decoration: underline;
  }

  .contact-item a:hover {
    color: var(--color-link-on-dark-hover);
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-links a {
    color: var(--color-link-on-dark);
    transition: color 0.2s ease;
    text-decoration: underline;
  }

  .footer-links a:hover {
    color: var(--color-link-on-dark-hover);
  }

  .route-planning {
    margin-bottom: var(--spacing-lg);
  }

  .route-planning p {
    margin-bottom: var(--spacing-md);
    color: var(--color-cream);
  }

  .route-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
  }

  .route-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-link-on-dark);
    text-decoration: underline;
    padding: var(--spacing-sm);
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }

  .route-link:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-link-on-dark-hover);
    transform: translateX(4px);
    border-color: var(--color-link-on-dark);
  }

  .route-link:focus {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--color-link-on-dark);
    transform: translateX(2px);
  }

  .address-copy {
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-sm);
    border-radius: var(--border-radius);
    margin-top: var(--spacing-md);
  }

  .address-copy p {
    margin-bottom: var(--spacing-xs);
    font-size: 0.875rem;
  }

  .gps-address {
    font-family: monospace;
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-xs);
    border-radius: 4px;
    font-size: 0.875rem;
    color: var(--color-accent);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--color-link-on-dark);
    transition: all 0.2s ease;
    text-decoration: none;
    border: 2px solid transparent;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-link-on-dark-hover);
    transform: translateY(-2px);
    border-color: var(--color-link-on-dark);
  }

  .social-link:focus {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--color-link-on-dark);
    transform: translateY(-1px);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .legal-links {
    display: flex;
    gap: var(--spacing-lg);
  }

  .legal-links a {
    color: var(--color-link-on-dark);
    font-size: 0.875rem;
    text-decoration: underline;
  }

  .legal-links a:hover {
    color: var(--color-link-on-dark-hover);
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--spacing-xl) 0 var(--spacing-lg);
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .route-links {
      gap: var(--spacing-xs);
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .route-link,
    .social-link {
      border-width: 3px;
    }
  }
</style>